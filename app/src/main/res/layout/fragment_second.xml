<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?colorOnPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:id="@+id/secondScreenContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/secondScreenMainTextBox"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="@string/secondScreenEditTextHint"
            android:textColorHint="?colorPrimaryVariant"
            android:textStyle="italic"
            app:boxStrokeColor="?colorSecondary"
            app:endIconMode="clear_text"
            app:layout_constraintTop_toBottomOf="@+id/change_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/secondScreenMainEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="?colorPrimaryVariant" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/acceptButtonSecondScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="?colorSecondary"
            android:text="@string/acceptButtonSecondScreen" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/secondScreenProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>