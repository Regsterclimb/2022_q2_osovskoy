<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="3dp"
    android:id="@+id/requestContainer"
    tools:context=".ui.loancondition.LoanConditionFragment">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/tool_menu"
        app:title="@string/app_name" />

    <ImageView
        android:id="@+id/bannerContainer"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_margin="16dp"
        android:background="?colorPrimary"
        android:scaleType="centerCrop"
        android:src="@drawable/banner_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вводим имя фамилию телефон и получаем свой займ"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruction"
        tools:visibility="visible" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/loanConditionAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Сумма:"
        app:layout_constraintBottom_toTopOf="@id/loanConditionPercent"
        app:layout_constraintEnd_toStartOf="@id/mainAmount"
        app:layout_constraintStart_toStartOf="@id/itemImageBarrier"
        app:layout_constraintTop_toTopOf="@+id/bannerContainer" />

    <TextView
        android:id="@+id/loanConditionPercent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Процент : "
        app:layout_constraintBottom_toTopOf="@id/loanConditionPeriod"
        app:layout_constraintEnd_toStartOf="@id/mainPercent"
        app:layout_constraintStart_toStartOf="@id/itemImageBarrier"
        app:layout_constraintTop_toBottomOf="@+id/loanConditionAmount" />

    <TextView
        android:id="@+id/loanConditionPeriod"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Срок: "
        app:layout_constraintBottom_toTopOf="@+id/openLoanScreenButton"
        app:layout_constraintEnd_toStartOf="@id/mainPeriod"
        app:layout_constraintStart_toStartOf="@id/itemImageBarrier"
        app:layout_constraintTop_toBottomOf="@+id/loanConditionPercent" />

    <Button
        android:id="@+id/openLoanScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/openLoanScreenText"
        app:layout_constraintBottom_toBottomOf="@+id/bannerContainer"
        app:layout_constraintEnd_toEndOf="@+id/bannerContainer" />

    <Button
        android:id="@+id/openHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerContainer" />

    <Button
        android:id="@+id/showInstructionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Инструкция"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoutButton" />

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Инструкция как получить займ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showInstructionButton" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/openLoanScreenButton"
        app:layout_constraintStart_toStartOf="@+id/bannerContainer"
        app:layout_constraintTop_toTopOf="@id/bannerContainer"
        app:srcCompat="@drawable/shift_banner" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/itemImageBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:barrierMargin="16dp"
        app:constraint_referenced_ids="imageView" />

    <TextView
        android:id="@+id/mainAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="15000"
        app:layout_constraintBottom_toTopOf="@id/mainPercent"
        app:layout_constraintEnd_toEndOf="@+id/bannerContainer"
        app:layout_constraintStart_toEndOf="@+id/loanConditionAmount"
        app:layout_constraintTop_toTopOf="@+id/bannerContainer" />

    <TextView
        android:id="@+id/mainPercent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text = "8.9"
        app:layout_constraintBottom_toTopOf="@id/mainPeriod"
        app:layout_constraintEnd_toEndOf="@+id/bannerContainer"
        app:layout_constraintStart_toEndOf="@id/loanConditionPercent"
        app:layout_constraintTop_toBottomOf="@+id/mainAmount" />

    <TextView
        android:id="@+id/mainPeriod"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="45"
        app:layout_constraintBottom_toTopOf="@+id/openLoanScreenButton"
        app:layout_constraintEnd_toEndOf="@+id/bannerContainer"
        app:layout_constraintStart_toEndOf="@id/loanConditionPeriod"
        app:layout_constraintTop_toBottomOf="@+id/mainPercent" />

</androidx.constraintlayout.widget.ConstraintLayout>