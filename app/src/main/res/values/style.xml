<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="bannerHolder" parent="title">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="appTitle" parent="title">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:text">@string/appbar</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="secondaryTextHolder">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">?colorPrimaryVariant</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <style name="studentHolderName" parent="bannerHolder">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="lineHeight">16dp</item>
    </style>

    <style name="acceptButton" parent="Button">
        <item name="android:text">@string/acceptButtonText</item>
    </style>

    <style name="declineButton" parent="Button">
        <item name="android:text">@string/declineButtonText</item>
    </style>

    <style name="backgroundBanner">
        <item name="android:background">?backgroundColor</item>
    </style>
    <style name="elevationBanner">
        <item name="android:elevation">3dp</item>
    </style>

</resources>
